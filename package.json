{
  "name": "that-api-events",
  "version": "4.2.0",
  "description": "THAT events service",
  "main": "index.js",
  "engines": {
    "node": ">=16 <19"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files",
    "postbuild": "cp .env package* __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && node index.js",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "start": "node index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@apollo/subgraph": "^2.5.1",
    "@fast-csv/format": "^4.3.5",
    "@google-cloud/firestore": "^6.7.0",
    "@google-cloud/trace-agent": "^7.1.2",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/utils": "^10.0.4",
    "@sentry/node": "^7.61.1",
    "@thatconference/api": "^4.3.0",
    "@thatconference/schema": "^4.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dateformat": "~4.6.3",
    "dayjs": "^1.11.9",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-csv": "^4.3.6",
    "graphql": "^16.7.1",
    "graphql-scalars": "^1.22.2",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "node-fetch": "~2.6.12",
    "postmark": "^3.0.19",
    "response-time": "^2.3.2",
    "slugify": "^1.6.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/node": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/register": "^7.21.0",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.1.0",
    "cross-env": "^7.0.3",
    "eslint": "~8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest-cli": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/that-api-events"
  },
  "license": "GPL-3.0"
}
